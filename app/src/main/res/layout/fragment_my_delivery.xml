<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- delivery_list -->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/delivery_list" />

    <!-- operation_bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:visibility="gone"
        android:background="@drawable/bg_light_top_border"
        android:id="@+id/operation_bar">

        <ImageButton
            style="@style/TabImageButton"
            android:src="@drawable/ic_action_make_available_offline"
            android:id="@+id/multiple_pin"/>

        <ImageButton
            style="@style/TabImageButton"
            android:src="@drawable/ic_action_accept"
            android:id="@+id/multiple_receive" />

        <ImageButton
            style="@style/TabImageButton"
            android:src="@drawable/ic_action_discard"
            android:id="@+id/multiple_delete" />

    </LinearLayout>

</LinearLayout>